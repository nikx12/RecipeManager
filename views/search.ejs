<% include ./partials/header %>
<div class="container" style="margin-top:10px">
    <div class="row">
        <div class="col-md-2">
    </div>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">

            <% recipes.forEach(function(recipe){ %>
            <div class="col-md-6 col-sm-6">
    
                <div class="thumbnail">
                    <img class="" src="<%= recipe.image %>" height="150px" width="150px" >
    
                        <div class="caption">
                            <h4>
                                <%= recipe.title %>
                            </h4>
                        </div>
                        <div>
                            <p>
                                <a href="/recipes/<%= recipe.id %>" class="btn btn-primary">More Info</a>
                            </p>
                        </div>
                </div>
            </div>
            <% });%>
        </div>
    </div>
</div>

<% include ./partials/footer %>